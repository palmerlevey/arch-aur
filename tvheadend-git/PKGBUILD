_gitname=tvheadend
pkgname=tvheadend-git
pkgver=20150629
pkgrel=1
pkgdesc="TV streaming server for Linux"
arch=('i686' 'x86_64')
url="https://github.com/tvheadend/tvheadend"
license=('GPL3')
depends=('openssl' 'python' 'ffmpeg' 'uriparser')
optdepends=('avahi' 'mlt')
makedepends=('git' 'bzip2' 'zlib' 'wget')
provides=("${pkgname%-*}")
conflicts=("${pkgname%-*}")
install=tvheadend-git.install
source=('git://github.com/tvheadend/tvheadend.git')
sha256sums=('SKIP')

build() {
  cd "$srcdir/$_gitname"

  ./configure --prefix=/usr --disable-avahi
  make
}

package() {
  cd "$srcdir/$_gitname"

  make DESTDIR="${pkgdir}" install
}
