_gitname=tvheadend
pkgname=tvheadend-git
pkgver=20141811
pkgrel=1
pkgdesc="TV streaming server for Linux"
arch=('i686' 'x86_64')
url="https://github.com/tvheadend/tvheadend"
license=('GPL3')
depends=('zlib' 'uriparser')
optdepends=('avahi' 'ffmpeg' 'mlt')
makedepends=('git' 'python2' 'openssl' 'bzip2' 'wget')
provides=("${pkgname%-*}")
conflicts=("${pkgname%-*}")
install=tvheadend-git.install
source=('git://github.com/tvheadend/tvheadend.git')
sha256sums=('SKIP')

build() {
  cd "$srcdir/$_gitname"

  ./configure --prefix=/usr --disable-avahi
  make
}

package() {
  cd "$srcdir/$_gitname"

  make DESTDIR="${pkgdir}" install
}